# ============================================
# 环境变量配置模板
# 使用说明：复制此文件为 .env 并填入真实的API密钥
# ============================================

# ==================== LLM API配置 ====================
# 阿里云通义千问API
DASHSCOPE_API_KEY=your_dashscope_api_key_here

# 通义万相图像生成API（与通义千问共用DASHSCOPE_API_KEY）
# 申请地址：https://dashscope.aliyun.com/

# 备用：文心一言API（可选）
WENXIN_API_KEY=your_wenxin_api_key_here
WENXIN_SECRET_KEY=your_wenxin_secret_key_here

# ==================== 外部数据API ====================
# 政府开放数据平台API
GOVERNMENT_API_KEY=your_government_api_key_here
GOVERNMENT_API_BASE_URL=https://api.example.gov.cn

# ==================== 数据库配置 ====================
# ChromaDB配置
CHROMADB_PATH=./data/chromadb
CHROMADB_COLLECTION_VILLAGES=villages_knowledge
CHROMADB_COLLECTION_DESIGNS=design_cases

# SQLite配置
SQLITE_DB_PATH=./data/app.db

# ==================== 应用配置 ====================
# FastAPI配置
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
BACKEND_RELOAD=true

# Streamlit配置
FRONTEND_PORT=8501
API_BASE_URL=http://localhost:8000

# ==================== 其他配置 ====================
# 日志级别
LOG_LEVEL=INFO

# 缓存配置
REDIS_URL=redis://localhost:6379/0
ENABLE_CACHE=true

# 图像生成配置
IMAGE_OUTPUT_DIR=./data/generated_images
MAX_IMAGE_SIZE=2048
DEFAULT_IMAGE_STYLE=chinese_painting

# 敏感词检测
SENSITIVE_WORDS_PATH=./data/sensitive_words.txt
ENABLE_CONTENT_REVIEW=true

